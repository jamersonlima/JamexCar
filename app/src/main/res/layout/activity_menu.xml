<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background = "@drawable/background1"
    android:padding="15dp"
    tools:context=".view.Menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:text="Seja bem vindo(a)!"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#201E23"
                android:layout_marginBottom="20dp"
                android:textColor="#FFFFFF"
                android:onClick="listarUsuarios"
                android:text="Ver Mecanicos" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#201E23"
                android:layout_marginVertical="20dp"
                android:textColor="#FFFFFF"
                android:onClick="listarCarros"
                android:text="Ver Carros" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:backgroundTint="#201E23"
                android:textColor="#FFFFFF"
                android:onClick="novaCarro"
                android:text="Adicionar Carro" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:backgroundTint="#201E23"
                android:textColor="#FFFFFF"
                android:onClick="listarPerformances"
                android:text="Ver Reparos" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:backgroundTint="#201E23"
                android:textColor="#FFFFFF"
                android:onClick="novaPerformances"
                android:text="Adicionar Reparo" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:backgroundTint="#201E23"
                android:textColor="#FFFFFF"
                android:onClick="logout"
                android:text="Sair do aplicativo" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>