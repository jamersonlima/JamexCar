<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:background = "@drawable/background1"
    android:padding="15dp"
    tools:context=".view.performance.VerPerformance">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="Informações do Reparo"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/verIdPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="ID:"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/verUsuarioPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Mecanico: "
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/verCarroPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Carro:"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/verMotorPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Motor:"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/verTipoPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Tipo: "
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/verPrecoPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Preço: "
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/verAnoPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Ano:"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/verAceleracaoPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Diagnostico: "
                android:textColor="#000"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#201E23"
                    android:textColor="#FFFFFF"
                    android:onClick="editarPerformance"
                    android:text="Editar" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#201E23"
                    android:textColor="#FFFFFF"
                    android:onClick="removerPerformance"
                    android:text="Remover" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#201E23"
                android:textColor="#FFFFFF"
                android:onClick="novaPerformance"
                android:text="Novo Reparo" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>